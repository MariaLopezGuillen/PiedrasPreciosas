<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('layouts/navbar') %>
    <div class="container">
        <!-- Notificaciones -->
        <% if (success_msg) { %>
            <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <% if (error_msg) { %>
            <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <!-- BotÃ³n para crear nueva gema -->
        <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#crearGemaModal">
            Crear Nueva Gema
        </button>

        <!-- Listado de gemas -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% if (gemas && gemas.length > 0) { %>
                <% gemas.forEach(gema => { %>
                    <div class="col">
                        <div class="card">
                            <img src="<%= gema.imagen %>" class="card-img-top" alt="<%= gema.nombre %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= gema.nombre %></h5>
                                <p class="card-text"><%= gema.descripcion %></p>
                                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editarGemaModal<%= gema._id %>">
                                    Editar
                                </button>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#eliminarGemaModal<%= gema._id %>">
                                    Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col">
                    <p>No hay gemas disponibles.</p>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('layouts/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>