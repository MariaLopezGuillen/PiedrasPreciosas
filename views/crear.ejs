<form action="/piedras" method="POST" enctype="multipart/form-data" class="p-4 border rounded shadow-lg bg-light">
    <!-- Título del Formulario -->
    <h2 class="text-center mb-4">Agregar Nueva Piedra Preciosa</h2>

    <!-- Campo ID -->
    <div class="mb-3">
        <label for="id" class="form-label fw-bold">ID</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
            <input type="number" placeholder="Ingrese el ID" class="form-control" name="id" required>
        </div>
    </div>

    <!-- Campo Nombre -->
    <div class="mb-3">
        <label for="nombre" class="form-label fw-bold">Nombre</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-gem"></i></span>
            <input type="text" placeholder="Ingrese el nombre" class="form-control" name="nombre" required>
        </div>
    </div>

    <!-- Campo Tipo -->
    <div class="mb-3">
        <label for="tipo" class="form-label fw-bold">Tipo</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-tag"></i></span>
            <input type="text" placeholder="Ingrese el tipo" class="form-control" name="tipo" required>
        </div>
    </div>

    <!-- Campo Descripción -->
    <div class="mb-3">
        <label for="descripcion" class="form-label fw-bold">Descripción</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-align-left"></i></span>
            <textarea class="form-control" placeholder="Ingrese la descripción" name="descripcion" rows="3"
                required></textarea>
        </div>
    </div>

    <!-- Campo Foto -->
    <div class="mb-4">
        <label for="foto" class="form-label fw-bold">Foto</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-image"></i></span>
            <input type="file" class="form-control" name="foto" accept="image/*">
        </div>
        <div class="form-text text-muted">Sube una imagen de la piedra preciosa (formatos: jpg, png, etc.).</div>
    </div>

    <!-- Botón de Enviar -->
    <button type="submit" class="btn btn-dark w-100 mb-3 btn-lg">
        <i class="fas fa-plus-circle me-2"></i>Agregar Piedra
    </button>

    <!-- Botón de Volver Atrás -->
    <button type="button" class="btn btn-outline-secondary w-100 btn-lg" onclick="window.history.back()">
        <i class="fas fa-arrow-left me-2"></i>Volver Atrás
    </button>
</form>
